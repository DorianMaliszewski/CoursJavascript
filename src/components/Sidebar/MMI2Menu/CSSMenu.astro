---
import Link from "components/Link.astro";
import { PATHS } from "paths";
import { getLangFromUrl, useTranslations } from "i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ul>
  <li class="mt-4">
    <Link href={PATHS.css.recap}>
      {t("menu.css.recap.title")}
    </Link>
  </li>
  <li>
    <Link href={PATHS.css.grid}>
      {t("menu.css.grid.title")}
    </Link>
  </li>
  <li>
    <Link href={PATHS.css.flex}>
      {t("menu.css.flex.title")}
    </Link>
  </li>
  <li>
    <Link href={PATHS.css.quiz}>
      {t("menu.css.quiz.title")}
    </Link>
  </li>
</ul>
